<div class="row">
    <div class="container">
        @if (User.IsInRole(AppointmentScheduler.Utility.Helper.Admin))
        {
            <div class="form-group row col-2" id="divDoctorList">
                <label>Select Doctor</label>
                @Html.DropDownList("doctorId", new SelectList(ViewBag.getDoctorList, "ID", "Name"), new { @class = "form-control select2",
               @onChange = "onDoctorChange();" })
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

